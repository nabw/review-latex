\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{review}[2024/02/26 Reviewing package]

\RequirePackage{xcolor}
\RequirePackage{mdframed}

% Setup frame colors
\mdfsetup{%
middlelinecolor=red,
middlelinewidth=2pt,
backgroundcolor=purple!10,
roundcorner=10pt}

% Counter for questions
\newcounter{reviewCounter}
\setcounter{reviewCounter}{1}

\colorlet{reviewerColor}{blue!70!white!80!black}
\colorlet{answerWIPColor}{red!70!black}

\newcommand{\reviewer}[1]{{\color{reviewerColor}#1}}
\newcommand{\question}[2]{\noindent\thereviewCounter. \reviewer{#1} \addtocounter{reviewCounter}{1}}
\newcommand{\answerWIP}[1]{\begin{flushright}\begin{minipage}{0.95\textwidth} {{\color{answerWIPColor} #1}} \end{minipage}\end{flushright}}
\newcommand{\answerDone}[1]{\begin{flushright}\begin{minipage}{0.95\textwidth} {{\color{black} #1 }} \end{minipage}\end{flushright}}
\newcommand{\citeinwork}[1]{\begin{flushright}\begin{minipage}{0.8\textwidth}\begin{mdframed} {\it #1} \end{mdframed}\end{minipage}\end{flushright}}


\newcommand{\resetReviewCounter}{\setcounter{reviewCounter}{1}}
